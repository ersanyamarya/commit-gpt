{
  "name": "commit-gpt",
  "displayName": "Commit GPT",
  "description": "Generates commit messages using generative AI",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "commit-gpt.generateCommit",
        "title": "Commit GPT: Generate commit message"
      },
      {
        "command": "commit-gpt.setOpenAIKey",
        "title": "Commit GPT: Set OpenAI API key"
      }
    ],
    "configuration": {
      "title": "Commit GPT",
      "properties": {
        "commit-gpt.open-ai-key": {
          "type": "string",
          "default": "",
          "description": "OpenAI API key"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "format": "prettier --write \"**/*.{ts,js,jsx,tsx,json,md,graphql,yml,yaml}\"",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.2",
    "@types/node": "18.x",
    "@types/vscode": "^1.83.0",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.50.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "prettier-plugin-organize-imports": "^3.2.3",
    "ts-loader": "^9.4.4",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  }
}
